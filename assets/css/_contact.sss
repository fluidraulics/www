#contact

  & main
    padding: 2em 2em

    @media (min-width: 64em)
      padding: 2em calc(50% - 432px)

    & .container
      display: flex
      flex-direction: column
      margin: 0 2em

      @media (min-width: 44em)
        flex-direction: row

    & .container > *
      flex: 1 0
      list-style: none
      margin: 1em 0

    & a
      color: var(--brandBlack)
      text-decoration: none

